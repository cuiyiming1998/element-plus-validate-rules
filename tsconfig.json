{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "types": ["vitest/globals"]
  },
  "include": [
    "src/*",
    "src/*/**.ts",
    "./*.d.ts"
  ]
}
